    {
      "parameters": {
        "operation": "executeQuery",
        "query": "WITH subject AS (\n  SELECT email\n  FROM users\n  WHERE lower(email) = lower($1)\n  LIMIT 1\n),\nguard AS (\n  SELECT\n    EXISTS(SELECT 1 FROM subject) AS user_exists,\n    (lower($1) <> lower($2)) AS not_self\n),\ndo_update AS (\n  UPDATE users\n  SET\n    token =encode(gen_random_bytes(24), 'hex'),\n    token_expires_at = NOW() + INTERVAL '30 minutes'\n  WHERE lower(email) = lower($1)\n    AND lower($1) <> lower($2)\n  RETURNING email, token, token_expires_at\n)\nSELECT\n  (SELECT user_exists FROM guard) AS user_exists,\n  (SELECT not_self FROM guard) AS not_self,\n  EXISTS(SELECT 1 FROM do_update) AS ok,\n  COALESCE((SELECT token FROM do_update), '') AS new_token,\n  $1::text AS subject_email;\n",
