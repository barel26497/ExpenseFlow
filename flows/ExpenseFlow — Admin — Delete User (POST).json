    {
      "parameters": {
        "operation": "executeQuery",
        "query": "WITH subject AS (\n  SELECT email\n  FROM users\n  WHERE lower(email) = lower($1)\n  LIMIT 1\n),\nguard AS (\n  SELECT\n    EXISTS(SELECT 1 FROM subject) AS user_exists,\n    (lower($1) <> lower($2)) AS not_self\n),\ndel_claims AS (\n  DELETE FROM claims\n  WHERE lower(employee_email) = lower($1)\n     OR lower(approver_email) = lower($1)\n  RETURNING 1\n),\ndo_delete AS (\n  DELETE FROM users\n  WHERE lower(email) = lower($1)\n    AND (lower($1) <> lower($2))\n  RETURNING email\n)\nSELECT\n  (SELECT user_exists FROM guard) AS user_exists,\n  (SELECT not_self FROM guard) AS not_self,\n  EXISTS(SELECT 1 FROM do_delete) AS ok,\n  lower($1)::text AS subject_email;\n",
